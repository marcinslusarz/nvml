export UNITTEST_NAME=file_preload/TEST1
export UNITTEST_NUM=1

# standard unit test setup
. ../unittest/unittest.sh

require_test_type medium
require_build_type debug nondebug
require_fs_type any

setup

expect_normal_exit ../../tools/mkfs.pmemfile/mkfs.pmemfile $DIR/dummy_fs 16m

mkdir -p $DIR/dummy_mount_point

export TEST_LD_PRELOAD=libpmemfile.so
export PMEMFILE_POOLS=$DIR/dummy_mount_point:$DIR/dummy_fs

export PMEMFILE_PRELOAD_LOG=pmemfile_preload.log
export INTERCEPT_LOG=intercept.log

expect_normal_exit cp dummy_file_a $DIR/dummy_mount_point/file_a
expect_normal_exit cp dummy_file_b $DIR/dummy_mount_point/file_b
expect_normal_exit cp $DIR/dummy_mount_point/file_a file_a.log
expect_normal_exit cp $DIR/dummy_mount_point/file_b file_b.log

cmp file_a.log dummy_file_a
cmp file_b.log dummy_file_b

expect_normal_exit cat $DIR/dummy_mount_point/file_a > file_a_cat.log

cmp file_a_cat.log dummy_file_a

expect_normal_exit ls $DIR/dummy_mount_point > pmemfile_ls_root.log

cmp pmemfile_ls_root.log ls_root_expected_log

expect_normal_exit ls -o --time-style=+"" $DIR/dummy_mount_point | sed 's/\s\+/ /g' > file_preload_lsl1.log
expect_normal_exit ls -ao --time-style=+"" $DIR/dummy_mount_point | sed -e 's/\s\+/ /g' -e '/\.\./d' > file_preload_lsla1.log
expect_abnormal_exit mkdir $DIR/dummy_mount_point/nonexistent/dummy_dir_a &> /dev/null
expect_normal_exit mkdir $DIR/dummy_mount_point/dummy_dir_a
expect_normal_exit ls -o --time-style=+"" $DIR/dummy_mount_point | sed 's/\s\+/ /g' > file_preload_lsl_with_dir1.log
expect_normal_exit rmdir $DIR/dummy_mount_point/dummy_dir_a
expect_normal_exit ls -o --time-style=+"" $DIR/dummy_mount_point | sed 's/\s\+/ /g' > file_preload_lsl_with_nodir1.log

# todo: when rm works...
#  only faccessat seems to be missing for rm to work
# expect_normal_exit rm $DIR/dummy_mount_point/file_a
# expect_normal_exit ls $DIR/dummy_mount_point > pmemfile_ls_root_after_rm.log
# cmp pmemfile_ls_root_after_rm.log ls_root_after_rm_expected_log

check

pass
